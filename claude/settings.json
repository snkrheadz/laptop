{
  "language": "japanese",
  "env": {
    "ENABLE_TOOL_SEARCH": "auto:15"
  },
  "permissions": {
    "additionalDirectories": [
      "../worktrees/"
    ],
    "allow": [
      "Read(~/.claude/**)",
      "Read",
      "Glob",
      "Grep",
      "Edit",
      "NotebookEdit",
      "WebSearch",
      "WebFetch",
      "mcp__plugin_Notion_notion*",
      "mcp__plugin_figma_figma__*",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(node *)",
      "Bash(mise *)",
      "Bash(brew *)",
      "Bash(ls *)",
      "Bash(cd *)",
      "Bash(pwd)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(tree *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(echo *)",
      "Bash(which *)",
      "Bash(gh *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(chmod *)",
      "Bash(source *)",
      "Bash(shellcheck *)",
      "Bash(pre-commit *)",
      "Bash(gitleaks *)"
    ],
    "deny": [
      "Read(~/.secrets.env)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(~/.aws/credentials)",
      "Read(~/.ssh/id_*)",
      "Bash(rm -rf /)",
      "Bash(sudo *)"
    ]
  },
  "model": "opus",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/validate-shell.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/count_tokens.js"
          },
          {
            "type": "command",
            "command": "node ~/.claude/hooks/save-to-obsidian.js"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "say 'Claude needs input'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": false,
    "gopls-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "Notion@claude-plugins-official": true,
    "playwright@claude-plugins-official": false,
    "document-skills@anthropic-agent-skills": true,
    "ralph-loop@claude-plugins-official": true
  }
}
